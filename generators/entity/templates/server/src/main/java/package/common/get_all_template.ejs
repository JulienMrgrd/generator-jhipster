    <%_
    const instanceType = (dto === 'mapstruct') ? entityClass + 'DTO' : entityClass;
    const instanceName = (dto === 'mapstruct') ? entityInstance + 'DTO' : entityInstance;
    const mapper = entityInstance + 'Mapper';
    const entityListToDtoListReference = mapper + '.' + 'toDto';
    const entityFluxToDtoFluxReference = '.map(' + mapper + '::toDto)';
    const listOrFlux  = (reactive === 'yes') ? 'Flux' : 'List';
    if (pagination === 'no') { %>
    public <%= listOrFlux %><<%= instanceType %>> getAll<%= entityClassPlural %>(<% if (fieldsContainNoOwnerOneToOne) { %>@RequestParam(required = false) String filter<% } %>) {<%- include('get_all_stream_template', {viaService: viaService}); -%>
        log.debug("REST request to get all <%= entityClassPlural %>");<% if (viaService) { %>
        return <%= entityInstance %>Service.findAll();<% } else if (dto === 'mapstruct') { %>
        <%= listOrFlux %><<%= entityClass %>> <%= entityInstancePlural %> = <%= entityInstance %>Repository.<% if (fieldsContainOwnerManyToMany) { %>findAllWithEagerRelationships<% } else { %>findAll<% } %>();
        return <% if (reactive === 'no') { %><%= entityListToDtoListReference %>(<%= entityInstancePlural %>);<% } else { %> <%= entityInstancePlural %><%= entityFluxToDtoFluxReference %>; <% } %><% } else { %>
        return <%= entityInstance %>Repository.<% if (fieldsContainOwnerManyToMany) { %>findAllWithEagerRelationships<% } else { %>findAll<% } %>();<% } %>
    <% } if (pagination !== 'no') { %>
    public <% if (reactive === 'yes') { %>Mono<ResponseEntity<List<<%= instanceType %>>>><% } else { %>ResponseEntity<List<<%= instanceType %>>><% } %> getAll<%= entityClassPlural %>(@ApiParam Pageable pageable<% if (fieldsContainNoOwnerOneToOne) { %>, @RequestParam(required = false) String filter<% } %>) {<%- include('get_all_stream_template', {viaService: viaService}); -%>
        log.debug("REST request to get a page of <%= entityClassPlural %>");<% if (viaService) { %>
        <% if (reactive === 'yes') { %>Flux<% } else { %>Page<% } %><<%= instanceType %>> page = <%= entityInstance %>Service.findAll(pageable);<% } else { %>
        <% if (reactive === 'yes') { %>Flux<% } else { %>Page<% } %><<%= entityClass %>> page = <%= entityInstance %>Repository.findAll<% if (reactive !== 'no') { %>By<% } %>(pageable);<% } %>
        <% if (reactive === 'yes') { %>Mono<Long> size = <%= entityInstance %><% if (viaService) { %>Service<% } else { %>Repository<% } %>.count();
        return Mono.when(page.collectList(), size, (List<<%= entityClass %>> list, Long totalNumber) ->
            new ResponseEntity<>(<% if (dto === 'mapstruct') { %><%= entityListToDtoListReference %>(list)<% } %>, PaginationUtil.generatePaginationHttpHeaders(pageable,list,totalNumber,"/api/<%= entityApiUrl %>"), HttpStatus.OK));<%_ } else { %>HttpHeaders headers = PaginationUtil.generatePaginationHttpHeaders(page, "/api/<%= entityApiUrl %>");
        return new ResponseEntity<>(<% if (!viaService && dto === 'mapstruct') { %><%= entityListToDtoListReference %>(page.getContent())<% } else { %>page.getContent()<% } %>, headers, HttpStatus.OK);
    <% }} %>
    }
